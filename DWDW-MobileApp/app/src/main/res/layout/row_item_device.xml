<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:background="@drawable/radius_conner_white"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_cctv"
                android:scaleType="fitXY"
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp60">

            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnl_root_manage_device"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="4.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_name_device"
                android:text="Camera 8 PḾ ́"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp18"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txt_create_date_device"
                android:text="18-11-2011 11:30 pm"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/sp15"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txt_location_device"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/sp15"
                android:textStyle="bold"
                android:text="Khu A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txt_room_device"
                android:textColor="@color/colorYellowOrange"
                android:textSize="@dimen/sp15"
                android:textStyle="bold"
                android:text="Room 101"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txt_active_device"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/sp15"
                android:textStyle="bold"
                android:text="Active"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_weight="3.5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
           <LinearLayout
               android:id="@+id/lnl_active_device"
               android:layout_marginRight="@dimen/dp16"
               android:layout_marginLeft="@dimen/dp16"
               android:background="@drawable/radius_conner_orange"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/txt_name_active_device"
                   android:textSize="@dimen/sp13"
                   android:textStyle="bold"
                   android:gravity="center"
                   android:layout_gravity="center"
                   android:text="Active"
                   android:textColor="@color/colorWhite"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

               </TextView>
           </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>