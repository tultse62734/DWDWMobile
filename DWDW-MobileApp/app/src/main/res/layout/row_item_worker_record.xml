<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    android:id="@+id/lnl_root_worker_record">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:background="@drawable/radius_conner_grey"
        android:gravity="center|top"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp80"
            android:layout_marginTop="@dimen/dp10"
            android:src="@mipmap/ic_worker"></ImageView>
        <TextView
            android:id="@+id/txt_username_worker_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Worker 1"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp15"
            android:textStyle="bold">

        </TextView>
        <TextView
            android:id="@+id/txt_room_worker_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Room"
            android:textColor="@color/colorGreen"
            android:textSize="@dimen/sp15"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/txt_number_worker_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="10 Record"
            android:textColor="@color/colorRed"
            android:textSize="@dimen/sp15"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>

</LinearLayout>