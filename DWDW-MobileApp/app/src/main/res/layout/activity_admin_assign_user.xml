<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.AdminAssignUserActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorOrange"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:weightSum="10"
                android:layout_marginTop="@dimen/dp40"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="8"
                    android:textSize="@dimen/sp22"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:text="Assign User"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:id="@+id/lnl_close_admin_assign_user"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_close"
                        android:tint="@color/colorWhite"></ImageView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp100"
            android:orientation="vertical"
            android:background="@drawable/radius_conner_bottom_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp20"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginBottom="@dimen/dp10"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold"
                    android:text="Username:"
                    android:textColor="@color/colorRed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <EditText
                    android:clickable="true"
                    android:id="@+id/edit_assign_username"
                    android:textSize="@dimen/sp18"
                    android:textStyle="italic"
                    android:enabled="false"
                    android:background="@drawable/rounder_edit_text_1dp"
                    android:hint="Input username"
                    android:textColorHighlight="@color/colorGreyDark"
                    android:textColorHint="@color/colorGrey"
                    android:textColor="@color/colorYellowOrange"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp60">
                </EditText>
                <TextView
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold"
                    android:text="Location :"
                    android:textColor="@color/colorRed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:gravity="center|left"
                    android:id="@+id/edt_choose_location_assign_admin_add_user"
                    android:textSize="@dimen/sp18"
                    android:textStyle="italic"
                    android:layout_gravity="center"
                    android:background="@drawable/rounder_edit_text_1dp"
                    android:textColorHighlight="@color/colorGreyDark"
                    android:hint="Input location Code"
                    android:textColorHint="@color/colorGrey"
                    android:textColor="@color/colorYellowOrange"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp60">
                </TextView>
                <TextView
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp10"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold"
                    android:text="Time :"
                    android:textColor="@color/colorRed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </TextView>
                <TextView
                    android:gravity="center|left"
                    android:layout_gravity="center"
                    android:id="@+id/edt_choose_time_assgin_admin_add_user"
                    android:textSize="@dimen/sp18"
                    android:textStyle="italic"
                    android:background="@drawable/rounder_edit_text_1dp"
                    android:textColorHighlight="@color/colorGreyDark"
                    android:hint="---- Choose ----"
                    android:textColorHint="@color/colorGrey"
                    android:textColor="@color/colorYellowOrange"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp60">
                </TextView>
                <LinearLayout
                    android:layout_marginBottom="@dimen/dp20"
                    android:id="@+id/lnl_submit_assign_user_admin"
                    android:layout_marginRight="@dimen/dp20"
                    android:layout_marginTop="@dimen/dp20"
                    android:layout_marginLeft="@dimen/dp20"
                    android:background="@color/colorBlue"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp60">
                    <TextView
                        android:textSize="@dimen/sp18"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Assign"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>