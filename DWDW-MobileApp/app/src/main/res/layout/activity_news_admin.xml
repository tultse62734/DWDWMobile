<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ManageLocationActivity">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorOrange"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:weightSum="10"
                android:layout_marginTop="@dimen/dp40"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="8"
                    android:textSize="@dimen/sp22"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:text="Manage Location"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:id="@+id/lnl_close_manage_location"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:tint="@color/colorWhite"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_close"
                        android:layout_width="25dp"
                        android:layout_height="25dp">
                    </ImageView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp10"
                android:orientation="vertical"
                android:background="@drawable/radius_conner_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="7"
                        android:layout_marginRight="@dimen/dp10"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginBottom="@dimen/dp10"
                        android:layout_marginTop="@dimen/dp10"
                        android:text="Location"
                        android:textColor="@color/colorOrangeDark"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp18"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <LinearLayout
                        android:id="@+id/lnl_add_location_admin"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/ic_add"
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30">

                        </ImageView>
                    </LinearLayout>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_location"
                    android:layout_marginBottom="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

        </LinearLayout>

</LinearLayout>