<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.ProfileManageActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center"
            android:background="@drawable/bg_profile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp200">
            <LinearLayout
                android:weightSum="10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="@dimen/dp16"
                    android:layout_marginLeft="@dimen/dp16"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/colorWhite"
                    android:text="Account"
                    android:layout_width="@dimen/dp0"
                    android:layout_weight="8"
                    android:layout_height="wrap_content">

                </TextView>
                <LinearLayout
                    android:id="@+id/lnl_close_manage_profile"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:tint="@color/colorWhite"
                        android:src="@mipmap/ic_close"
                        android:scaleType="fitXY"
                        android:layout_width="@dimen/dp25"
                        android:layout_height="@dimen/dp25"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp150"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/dp150"
                    android:layout_height="150dp"
                    android:src="@mipmap/ic_worker"
                    app:civ_border_color="@color/colorBlack"
                    app:civ_border_width="@dimen/dp5" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginRight="@dimen/dp16"
                android:layout_marginLeft="@dimen/dp16"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/sp22"
                    android:textColor="@color/colorBlack"
                    android:text="Information "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp10"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_profile"
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30">

                        </ImageView>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Fullname "
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp15"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        </TextView>
                        <TextView
                            android:id="@+id/txt_name_profile"
                            android:layout_marginTop="@dimen/dp5"
                            android:text="Lê Tuấn Tú"
                            android:textColor="@color/colorGreyDark"
                            android:textSize="@dimen/sp15"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        </TextView>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp10"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_mail"
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30">

                        </ImageView>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Birthday "
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp15"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        </TextView>
                        <TextView
                            android:id="@+id/txt_email_profile"
                            android:layout_marginTop="@dimen/dp5"
                            android:text="tultse62734@fpt.edu.vn"
                            android:textColor="@color/colorGreyDark"
                            android:textSize="@dimen/sp15"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        </TextView>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp10"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_phone"
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30">

                        </ImageView>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Phone"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp15"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        </TextView>
                        <TextView
                            android:id="@+id/txt_phone_profile"
                            android:layout_marginTop="@dimen/dp5"
                            android:text="0774959623"
                            android:textColor="@color/colorGreyDark"
                            android:textSize="@dimen/sp15"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        </TextView>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp10"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_name"
                            android:layout_width="@dimen/dp30"
                            android:layout_height="@dimen/dp30">

                        </ImageView>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Role "
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/sp15"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        </TextView>
                        <TextView
                            android:id="@+id/txt_role_profile"
                            android:layout_marginTop="@dimen/dp5"
                            android:text="Admin"
                            android:textColor="@color/colorRed"
                            android:textSize="@dimen/sp15"
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        </TextView>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnl_update_account"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginRight="@dimen/dp20"                android:layout_marginTop="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp20"
                android:background="@color/colorOrange"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp60">
                <TextView
                    android:textSize="@dimen/sp18"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Edit"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>
</LinearLayout>