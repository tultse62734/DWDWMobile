<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.WorkerHistoryActivity">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorOrange"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:weightSum="10"
            android:layout_marginTop="@dimen/dp40"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="8"
                android:textSize="@dimen/sp22"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:text="Manage Record"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                android:id="@+id/lnl_close_manage_accident_worker_history"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:tint="@color/colorWhite"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_close"
                    android:layout_width="25dp"
                    android:layout_height="25dp">
                </ImageView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/radius_conner_white"
            android:layout_marginTop="@dimen/dp50"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.github.sundeepk.compactcalendarview.CompactCalendarView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/compactcalendar_worker_record_history"
                android:layout_width="match_parent"
                android:paddingRight="10dp"
                android:layout_marginBottom="@dimen/dp30"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                android:paddingLeft="10dp"
                android:layout_height="250dp"
                app:compactCalendarTargetHeight="250dp"
                app:compactCalendarTextSize="@dimen/sp14"
                android:background="@drawable/radius_conner_grey"
                app:compactCalendarBackgroundColor="@color/colorOrange"
                app:compactCalendarTextColor="@color/colorWhite"
                app:compactCalendarCurrentSelectedDayBackgroundColor="@color/colorRed"
                app:compactCalendarCurrentDayBackgroundColor="@color/colorOrangeDark"
                app:compactCalendarMultiEventIndicatorColor="@color/colorWhite"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/dp10"
                android:id="@+id/rcv_accident_worker_history"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>