<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.ManagerShiftViewActivity">
    <LinearLayout
        android:background="@drawable/bg_employee"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="8"
                android:textStyle="bold"
                android:textSize="@dimen/sp22"
                android:textColor="@color/colorWhite"
                android:text="Manage Shift"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            </TextView>
            <LinearLayout
                android:id="@+id/lnl_close_manage_shift"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:scaleType="fitXY"
                    android:tint="@color/colorWhite"
                    android:src="@mipmap/ic_close"
                    android:layout_width="@dimen/dp30"
                    android:layout_height="@dimen/dp30">

                </ImageView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp10"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginTop="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/colorRed"
                android:text="List"
                android:textStyle="bold"
                android:textSize="@dimen/sp22"
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            </TextView>
            <LinearLayout
                android:layout_weight="3"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginRight="@dimen/dp10"
                    android:id="@+id/lnl_filter_shift_worker"
                    android:gravity="left"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_filter"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginRight="@dimen/dp10"
                    android:id="@+id/lnl_add_shift_worker"
                    android:gravity="right"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_add"
                        android:layout_width="@dimen/dp40"
                        android:layout_height="@dimen/dp40"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/colorOrange"
                android:textStyle="bold"
                android:textSize="@dimen/sp18"
                android:id="@+id/text_month_current"
                android:text="Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <com.github.sundeepk.compactcalendarview.CompactCalendarView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/compactcalendar_view"
                android:layout_width="fill_parent"
                android:paddingRight="10dp"
                android:layout_marginBottom="@dimen/dp10"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                android:paddingLeft="10dp"
                android:layout_height="250dp"
                app:compactCalendarTargetHeight="250dp"
                app:compactCalendarTextSize="12sp"
                android:background="@drawable/radius_conner_grey"
                app:compactCalendarBackgroundColor="@color/colorOrange"
                app:compactCalendarTextColor="@color/colorWhite"
                app:compactCalendarCurrentSelectedDayBackgroundColor="@color/colorRed"
                app:compactCalendarCurrentDayBackgroundColor="@color/colorOrangeDark"
                app:compactCalendarMultiEventIndicatorColor="@color/colorWhite"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_shift"
                android:layout_marginBottom="@dimen/dp20"
                android:layout_marginRight="@dimen/dp10"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>