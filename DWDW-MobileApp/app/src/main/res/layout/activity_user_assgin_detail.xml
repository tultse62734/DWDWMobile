<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.UserAssginDetailActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorOrange"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:weightSum="10"
                android:layout_marginTop="@dimen/dp40"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="8"
                    android:textSize="@dimen/sp22"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:text="User-Assgin"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <LinearLayout
                    android:id="@+id/lnl_close_admin_user_assign"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_close"
                        android:tint="@color/colorWhite"></ImageView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp100"
            android:orientation="vertical"
            android:background="@drawable/radius_conner_bottom_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginRight="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp20"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginBottom="@dimen/dp10"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold"
                    android:text="Username:"
                    android:textColor="@color/colorRed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:clickable="true"
                    android:id="@+id/edit_user_assign_username"
                    android:textSize="@dimen/sp18"
                    android:textStyle="italic"
                    android:enabled="false"
                    android:background="@drawable/rounder_edit_text_1dp"
                    android:hint="Input username"
                    android:textColorHighlight="@color/colorGreyDark"
                    android:textColorHint="@color/colorGrey"
                    android:textColor="@color/colorYellowOrange"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp60">
                </TextView>
                <LinearLayout
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp10"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorRed"
                        android:text="List location"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp22"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                    </TextView>
                    <LinearLayout
                        android:layout_marginRight="@dimen/dp10"
                        android:id="@+id/lnl_add_user_assign"
                        android:gravity="right"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_add"
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"/>
                    </LinearLayout>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_user_assign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>