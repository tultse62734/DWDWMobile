<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lnl_root_manage_room"
    >

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:background="@drawable/radius_conner_white"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp10"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_architecture_city"
                android:scaleType="fitXY"
                android:layout_width="@dimen/dp60"
                android:layout_height="@dimen/dp60">

            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_name_room"
                android:text="Room 100 ́"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp18"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txt_create_date_room"
                android:text="18-11-2011 11:30 pm"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/sp15"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:id="@+id/txt_status_room"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/sp15"
                android:textStyle="bold"
                android:text="Đang hoạt động"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginRight="@dimen/dp16"
                android:layout_marginLeft="@dimen/dp16"
                android:background="@drawable/radius_conner_orange"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="57dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Edit"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp18"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>