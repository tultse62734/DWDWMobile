<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/lnl_root_choose_location"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100">
        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/ic_event"
                android:scaleType="fitXY"
                android:layout_width="@dimen/dp30"
                android:layout_height="@dimen/dp30">

            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/dp10"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_name_choose_location"
                android:text="Khu A"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp18"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:visibility="gone"
                android:id="@+id/txt_choose_create_date_location"
                android:text="18-11-2011 11:30 pm"
                android:textColor="@color/colorGreyDark"
                android:textSize="@dimen/sp15"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/txt_choose_status_location"
                android:textSize="@dimen/sp15"
                android:textStyle="bold"
                android:text="Không hoạt động"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>