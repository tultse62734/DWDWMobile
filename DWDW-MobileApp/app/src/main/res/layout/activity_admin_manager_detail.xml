<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.AdminManagerDetailActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:background="@color/colorOrange"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:weightSum="10"
                    android:layout_marginTop="@dimen/dp40"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="8"
                        android:textSize="@dimen/sp22"
                        android:textStyle="bold"
                        android:textColor="@color/colorWhite"
                        android:text="Update User"
                        android:layout_marginRight="@dimen/dp10"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                    </TextView>
                    <LinearLayout
                        android:id="@+id/lnl_close_admin_manager_detail"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:tint="@color/colorWhite"
                            android:scaleType="fitXY"
                            android:src="@mipmap/ic_close"
                            android:layout_width="25dp"
                            android:layout_height="25dp">
                        </ImageView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp100"
                android:orientation="vertical"
                android:gravity="top"
                android:background="@drawable/radius_conner_bottom_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp10"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp50">
                    <LinearLayout
                        android:id="@+id/lnl_btn_update_status_user"
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/image_btn_update_status_user"
                            android:src="@mipmap/ic_minus_1"
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40">

                        </ImageView>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp20"
                    android:layout_marginRight="@dimen/dp20"
                    android:layout_marginLeft="@dimen/dp20"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginBottom="@dimen/dp10"
                        android:textSize="@dimen/sp18"
                        android:textStyle="bold"
                        android:text="Username:"
                        android:textColor="@color/colorRed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>


                    <EditText
                        android:id="@+id/edit_update_username"
                        android:textSize="@dimen/sp18"
                        android:textStyle="italic"
                        android:background="@drawable/rounder_edit_text_1dp"
                        android:textColorHighlight="@color/colorGreyDark"
                        android:hint="Input username"
                        android:textColorHint="@color/colorGrey"
                        android:textColor="@color/colorYellowOrange"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp60">

                    </EditText>
                    <TextView
                        android:layout_marginBottom="@dimen/dp10"
                        android:textSize="@dimen/sp18"
                        android:textStyle="bold"
                        android:text="Phone:"
                        android:textColor="@color/colorRed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>


                    <EditText
                        android:id="@+id/edit_update_phone"
                        android:textSize="@dimen/sp18"
                        android:textStyle="italic"
                        android:background="@drawable/rounder_edit_text_1dp"
                        android:textColorHighlight="@color/colorGreyDark"
                        android:hint="Input phone"
                        android:textColorHint="@color/colorGrey"
                        android:textColor="@color/colorYellowOrange"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp60">

                    </EditText>
                    <TextView
                        android:layout_marginBottom="@dimen/dp10"
                        android:textSize="@dimen/sp18"
                        android:textStyle="bold"
                        android:text="Date of Birthday :"
                        android:textColor="@color/colorRed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>


                    <TextView
                        android:id="@+id/edt_choose_date_update_manager_admin"
                        android:textSize="@dimen/sp18"
                        android:textStyle="italic"
                        android:background="@drawable/rounder_edit_text_1dp"
                        android:textColorHighlight="@color/colorGreyDark"
                        android:hint="Input date"
                        android:textColorHint="@color/colorGrey"
                        android:textColor="@color/colorYellowOrange"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp60">

                    </TextView>
                    <TextView
                        android:layout_marginBottom="@dimen/dp10"
                        android:textSize="@dimen/sp18"
                        android:textStyle="bold"
                        android:text="Gender:"
                        android:textColor="@color/colorRed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:id="@+id/edt_choose_gender_update_manager_admin"
                        android:textSize="@dimen/sp18"
                        android:textStyle="italic"
                        android:background="@drawable/rounder_edit_text_1dp"
                        android:textColorHighlight="@color/colorGreyDark"
                        android:hint="Choose gender"
                        android:textColorHint="@color/colorGrey"
                        android:textColor="@color/colorYellowOrange"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp60">

                    </TextView>


                    <TextView
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_marginBottom="@dimen/dp10"
                        android:textSize="@dimen/sp18"
                        android:textStyle="bold"
                        android:text="Role:"
                        android:textColor="@color/colorRed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:layout_gravity="center|left"
                        android:id="@+id/edt_choose_role_update_manager_admin"
                        android:textSize="@dimen/sp18"
                        android:textStyle="italic"
                        android:background="@drawable/rounder_edit_text_1dp"
                        android:textColorHighlight="@color/colorGreyDark"
                        android:hint="Choose Role"
                        android:textColorHint="@color/colorGrey"
                        android:textColor="@color/colorYellowOrange"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp60">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="@dimen/dp20"
                    android:id="@+id/lnl_submit_update_user_admin"
                    android:layout_marginRight="@dimen/dp20"
                    android:layout_marginTop="@dimen/dp20"
                    android:layout_marginLeft="@dimen/dp20"
                    android:background="@color/colorBlue"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp60">
                    <TextView
                        android:textSize="@dimen/sp18"
                        android:textColor="@color/colorWhite"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Update"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>



            </LinearLayout>



        </FrameLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>